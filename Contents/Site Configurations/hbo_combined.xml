                <!-- <visit url="https://profile.hbogo.com/apps/profile/rest/samlService/logoutRequest/ATT?serviceCode=HBO&amp;nocache=1357416646737" /> -->
                <!-- <pause time="1000" /> -->
                <!-- <visit url="http://www.att.net/globalssosignout" /> -->
                <!-- <pause time="1000" /> -->

				<!-- Call HBO login for the provider after the login it should then redirect to blank hbo page so its faster -->
